{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
  "esModuleInterop": true,
  "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "types": ["node", "blessed"]
  },
  "include": ["src/**/*"],
  "exclude": ["dist", "node_modules"]
}
